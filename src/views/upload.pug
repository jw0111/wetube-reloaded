        span=errorMessage
    form(method="POST")
        input(name ="title", placeholder="Title", requred, type="text", maxLength=80)
        input(name ="description", placeholder="Description", requred, type="text", minLength=20)
        input(name ="hashtags", placeholder="Hashtags, separated by comma.", requred, type="text")
        input(type="submit", value="Upload Video")